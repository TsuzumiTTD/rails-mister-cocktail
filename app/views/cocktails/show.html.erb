<h1><%= @cocktail.name %></h1>
<% @doses.each do |dose| %>
  <p>
    <%= dose.description %>
    <%= dose.ingredient.name %>

    <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </p>
<% end %>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>


<%= link_to cocktails_path do %>
  <i class="fas fa-home"></i>
<% end %>
